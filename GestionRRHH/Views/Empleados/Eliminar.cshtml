@model GestionRRHH.Models.Empleado

@{
    ViewData["Title"] = "Eliminar Empleado";
}

<div class="container py-4">
    <div class="card mb-4">
        <div class="card-body">
            <h1>
                <i class="fas fa-user-minus me-3" style="color: var(--accent-color);"></i>
                Eliminar Empleado
            </h1>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="alert alert-danger mb-4">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>¿Está seguro de que desea eliminar este empleado?</strong>
                <p class="mb-0">Esta acción no se puede deshacer.</p>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Nombre</label>
                        <p>@Model.Nombre @Model.Apellido</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Documento</label>
                        <p>@Model.Documento</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Cargo</label>
                        <p>@Model.Cargo</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Departamento</label>
                        <p>@Model.Departamento</p>
                    </div>
                </div>
            </div>

            <form asp-action="Eliminar">
                <input type="hidden" asp-for="Id" />
                <div class="mt-4">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i> Confirmar Eliminación
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">
                        <i class="fas fa-arrow-left me-2"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

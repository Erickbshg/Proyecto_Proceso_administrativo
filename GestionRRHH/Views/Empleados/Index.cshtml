@model IEnumerable<GestionRRHH.Models.Empleado>

@{
    ViewData["Title"] = "Empleados";
}

<div class="container py-4">
    <div class="card mb-4">
        <div class="card-body d-flex justify-content-between align-items-center">
            <h1 class="mb-0">
                <i class="fas fa-user-tie me-3" style="color: var(--secondary-color);"></i>
                Empleados
            </h1>
            <a asp-action="Crear" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i> Nuevo Empleado
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nombre</th>
                                <th>Apellido</th>
                                <th>Documento</th>
                                <th>Departamento</th>
                                <th>Cargo</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Nombre</td>
                                    <td>@item.Apellido</td>
                                    <td>@item.Documento</td>
                                    <td>@item.Departamento</td>
                                    <td>@item.Cargo</td>
                                    <td>
                                        @if (item.Activo)
                                        {
                                            <span class="badge bg-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactivo</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Detalles" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-users fa-4x mb-3" style="color: var(--secondary-color);"></i>
                    <h3>No hay empleados registrados</h3>
                    <p>Comience agregando un nuevo empleado</p>
                    <a asp-action="Crear" class="btn btn-primary mt-3">
                        <i class="fas fa-plus me-2"></i> Nuevo Empleado
                    </a>
                </div>
            }
        </div>
    </div>
</div>

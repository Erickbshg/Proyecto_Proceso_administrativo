<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema RRHH</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        :root {
            --primary-color: #3a0ca3;
            --secondary-color: #4cc9f0;
            --accent-color: #f72585;
            --background-color: #10002b;
            --text-color: #ffffff;
            --card-bg: rgba(255, 255, 255, 0.05);
            --card-border: rgba(255, 255, 255, 0.1);
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--background-color);
            color: var(--text-color);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .navbar {
            background-color: rgba(0, 0, 0, 0.3);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid var(--card-border);
        }

        .navbar-brand {
            font-weight: bold;
            color: var(--secondary-color) !important;
        }

        .nav-link {
            color: var(--text-color) !important;
            position: relative;
            transition: all 0.3s ease;
        }

        .nav-link:hover {
            color: var(--secondary-color) !important;
        }

        .nav-link::after {
            content: '';
            position: absolute;
            width: 0;
            height: 2px;
            bottom: 0;
            left: 0;
            background-color: var(--secondary-color);
            transition: width 0.3s ease;
        }

        .nav-link:hover::after {
            width: 100%;
        }

        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

        .btn-primary:hover {
            background-color: #4361ee;
            border-color: #4361ee;
        }

        .btn-secondary {
            background-color: var(--secondary-color);
            border-color: var(--secondary-color);
            color: #000;
        }

        .btn-secondary:hover {
            background-color: #90e0ef;
            border-color: #90e0ef;
            color: #000;
        }

        .btn-danger {
            background-color: var(--accent-color);
            border-color: var(--accent-color);
        }

        .btn-danger:hover {
            background-color: #b5179e;
            border-color: #b5179e;
        }

        .card {
            background-color: var(--card-bg);
            border: 1px solid var(--card-border);
            border-radius: 10px;
            backdrop-filter: blur(5px);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

        .table {
            color: var(--text-color);
            border-color: var(--card-border);
        }

        .table thead th {
            background-color: rgba(0, 0, 0, 0.2);
            border-color: var(--card-border);
        }

        .table-hover tbody tr:hover {
            background-color: rgba(255, 255, 255, 0.05);
        }

        .form-control, .form-select {
            background-color: rgba(255, 255, 255, 0.1);
            border: 1px solid var(--card-border);
            color: var(--text-color);
        }

        .form-control:focus, .form-select:focus {
            background-color: rgba(255, 255, 255, 0.15);
            color: var(--text-color);
            border-color: var(--secondary-color);
            box-shadow: 0 0 0 0.25rem rgba(76, 201, 240, 0.25);
        }

        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.5);
        }

        /* Asegurar que todo el texto sea blanco */
        .card, .card-body, p, h1, h2, h3, h4, h5, h6, .form-label, .text-muted, .lead, .card-title, .card-text {
            color: #ffffff !important;
        }

        .table {
            color: #ffffff !important;
        }

        .text-muted {
            color: rgba(255, 255, 255, 0.7) !important;
        }

        .form-control, .form-select {
            color: #ffffff !important;
        }

        .form-control option, .form-select option {
            background-color: var(--background-color);
            color: #ffffff;
        }

        .alert {
            color: #ffffff;
        }

        .alert-danger {
            background-color: rgba(220, 53, 69, 0.7);
            border-color: rgba(220, 53, 69, 0.9);
        }

        .alert-info {
            background-color: rgba(13, 202, 240, 0.7);
            border-color: rgba(13, 202, 240, 0.9);
        }

        .alert-success {
            background-color: rgba(25, 135, 84, 0.7);
            border-color: rgba(25, 135, 84, 0.9);
        }

        .alert-warning {
            background-color: rgba(255, 193, 7, 0.7);
            border-color: rgba(255, 193, 7, 0.9);
            color: #000000;
        }

        footer {
            color: #ffffff;
        }

        footer a {
            color: var(--secondary-color) !important;
        }

        footer {
            background-color: rgba(0, 0, 0, 0.3);
            backdrop-filter: blur(10px);
            border-top: 1px solid var(--card-border);
            margin-top: auto;
        }

        /* Animaciones y efectos */
        @@keyframes glow {
            0% {
                box-shadow: 0 0 5px var(--secondary-color);
            }
            50% {
                box-shadow: 0 0 20px var(--secondary-color);
            }
            100% {
                box-shadow: 0 0 5px var(--secondary-color);
            }
        }

        .glow-effect {
            animation: glow 2s infinite;
        }

        /* Estilos para pantallas pequeñas */
        @@media (max-width: 768px) {
            .navbar-collapse {
                background-color: rgba(0, 0, 0, 0.8);
                border-radius: 10px;
                padding: 10px;
                margin-top: 10px;
            }
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm mb-3">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <i class="fas fa-users-gear me-2"></i>
                    Sistema RRHH
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (Context.Session.GetString("UsuarioId") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">
                                    <i class="fas fa-chart-line me-1"></i> Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Empleados" asp-action="Index">
                                    <i class="fas fa-user-tie me-1"></i> Empleados
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Asistencias" asp-action="Index">
                                    <i class="fas fa-clipboard-check me-1"></i> Asistencias
                                </a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (Context.Session.GetString("UsuarioId") != null)
                        {
                            <li class="nav-item">
                                <span class="nav-link">
                                    <i class="fas fa-user-circle me-1"></i>
                                    @Context.Session.GetString("NombreUsuario")
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Login" asp-action="Logout">
                                    <i class="fas fa-sign-out-alt me-1"></i> Cerrar Sesión
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted py-3">
        <div class="container text-center">
            &copy; 2025 - Sistema de Gestión de RRHH - <a asp-controller="Home" asp-action="Privacy">Privacidad</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
